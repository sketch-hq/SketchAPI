{
  "name": "sketch-api",
  "version": "2.0.0",
  "author": "Sam Deane",
  "license": "MIT",
  "description": "Javascript API for Sketch",
  "main": "exposed-npm-package.js",
  "files": [
    "exposed-npm-package.js"
  ],
  "scripts": {
    "build": "npm run build:test && npm run build:api && node ./scripts/copy-tests.js",
    "build:test": "skpm-test --build-only",
    "build:api": "webpack -p --optimize-minimize",
    "start": "npm run build",
    "watch": "webpack --watch",
    "run-tests": "skpm-test --app=latest",
    "test": "npm run lint -- --quiet && npm run run-tests",
    "test:watch": "npm run run-tests -- --watch",
    "lint": "find . -name \"*.ts\" -o -name \"*.js\" | grep -v -f .gitignore | xargs eslint",
    "prettier:base": "prettier --write",
    "prettify": "find . -name \"*.ts\" -o -name \"*.js\" | grep -v -f .gitignore | xargs npm run prettier:base",
    "lint-staged": "lint-staged",
    "postinstall": "node ./scripts/install-pre-commit.js"
  },
  "devDependencies": {
    "@skpm/test-runner": "^0.1.15",
    "awesome-typescript-loader": "^3.4.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.8.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-typescript": "^0.8.0",
    "lint-staged": "^5.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.8.2",
    "typescript": "^2.6.1",
    "typescript-eslint-parser": "^9.0.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {},
  "pre-commit": [
    "build",
    "lint-staged"
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "npm run prettier:base",
      "eslint",
      "git add"
    ],
    "*.{md}": [
      "npm run prettier:base",
      "git add"
    ]
  },
  "prettier": {
    "proseWrap": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  }
}
